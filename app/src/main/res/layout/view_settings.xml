<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/view_settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/bg2"
    tools:context="com.example.marrenmatias.trynavdrawer.ViewSettings">

    <TextView
        android:text="Thrifty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/thrift"
        android:textColor="@android:color/white"
        android:textSize="30sp" />

    <TextView
        android:text="Settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:id="@+id/txtBadges"
        android:textSize="36sp"
        android:layout_below="@+id/thrift"
        android:layout_centerHorizontal="true"
        tools:text="Badges" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        app:srcCompat="@drawable/back"
        android:id="@+id/backButton"
        android:scaleType="fitCenter"
        android:backgroundTint="@android:color/transparent"
        android:layout_marginTop="-15dp"
        android:layout_marginBottom="52dp"
        android:layout_toStartOf="@+id/txtBadges"
        android:layout_marginEnd="55dp" />

</RelativeLayout>
