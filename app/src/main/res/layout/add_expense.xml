<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/editTextExpenseAmount"
        android:layout_below="@+id/textViewExpense_"
        android:layout_alignParentStart="true"
        android:hint="Expense Amount"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Expense"
        android:id="@+id/btnAddExpenses"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="52dp"
        android:layout_below="@+id/editTextExpenseAmount"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextExpenseName"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:hint="Expense Name"/>

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBarExpense"
        android:indeterminate="false"
        android:layout_below="@+id/editTextExpenseName"
        android:layout_alignStart="@+id/btnAddExpenses"
        android:layout_alignEnd="@+id/btnAddExpenses" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/textViewExpense_"
        android:layout_below="@+id/progressBarExpense"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/textViewPercentIncrease"
        android:layout_below="@+id/editTextExpenseName"
        android:layout_toStartOf="@+id/textViewExpense_" />

</RelativeLayout>