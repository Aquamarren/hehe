<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/set_budget_first"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/bg3"
    tools:context="com.example.marrenmatias.trynavdrawer.SetBudget_first">


    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listViewFirstCategory"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btnInsertCategory"
        android:layout_marginBottom="80dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Set Budget"
        android:id="@+id/setBudget"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:text="Add Category"
        android:id="@+id/btnInsertCategory"
        android:onClick="onClick"
        app:srcCompat="@drawable/addcateg"
        android:backgroundTint="@android:color/transparent"
        android:scaleType="centerInside"
        android:layout_below="@+id/setBudget"
        android:layout_toEndOf="@+id/setBudget"
        android:layout_marginStart="27dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Budget"
        android:layout_below="@+id/setBudget"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:id="@+id/txtViewTotalBudget" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:text="Check"
        android:id="@+id/btnSubmit"
        android:onClick="onClick"
        app:srcCompat="@drawable/oko"
        android:backgroundTint="@android:color/transparent"
        android:scaleType="centerInside"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
