<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@drawable/side_nav_bar"
    android:gravity="bottom"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="4dp"
    android:theme="@style/ThemeOverlay.AppCompat.Dark"
    android:backgroundTint="#959595"
    android:weightSum="1">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        android:gravity="center"
        android:text="Username"
        android:id="@+id/username"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:layout_weight="0.88"
        android:textSize="24sp"
        android:layout_marginTop="99dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="112dp"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        app:srcCompat="@drawable/userimg"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="80dp"
        android:layout_height="60dp"
        app:srcCompat="@drawable/settings"
        android:layout_alignTop="@+id/badgePage"
        android:layout_alignParentStart="true"
        android:id="@+id/settingsPage"
        android:scaleType="centerInside"
        android:layout_marginTop="-7dp"
        android:layout_marginLeft="-12dp"
        android:backgroundTint="@android:color/transparent"
        android:layout_alignBottom="@+id/badgePage" />

    <ImageButton
        android:layout_width="80dp"
        android:layout_height="60dp"
        app:srcCompat="@drawable/badges"
        android:id="@+id/badgePage"
        android:backgroundTint="@android:color/transparent"
        android:scaleType="centerInside"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:visibility="visible" />

</LinearLayout>