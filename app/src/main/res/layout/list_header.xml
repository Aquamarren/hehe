<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/list_header_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="2dip"
        android:paddingBottom="2dip"
        android:paddingLeft="5dip"
        style="?android:attr/listSeparatorTextViewStyle" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/ExpenseCategoryAmount1"
        android:layout_gravity="right"
        android:text="hello"
        android:layout_weight="0.03"
        android:layout_alignBottom="@+id/ExpenseCategoryName1"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/list_header_title" />

    <TextView
        android:id="@+id/ExpenseCategoryName1"
        android:layout_width="209dp"
        android:layout_height="wrap_content"
        android:padding="10sp"
        android:textStyle="bold"
        android:text="hiii"
        android:layout_below="@+id/list_header_title"
        android:layout_toEndOf="@+id/ExpenseCategoryAmount1"
        android:layout_marginStart="107dp">
    </TextView>

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        android:layout_below="@+id/list_header_title"
        android:layout_alignParentStart="true"
        android:layout_marginStart="143dp"
        android:indeterminate="false" />

</RelativeLayout>