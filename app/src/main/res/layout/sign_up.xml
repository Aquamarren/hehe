<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:id="@+id/sign_up"
    android:background="@drawable/bg2">


    <TextView
        android:text="Thrifty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/thrift"
        android:textSize="36sp"
        android:textColor="@android:color/white" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editTextLname"
        android:hint="Last Name"
        android:layout_below="@+id/editTextFName"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:id="@+id/buttonSignUp"
        android:clickable="true"
        android:onClick="onSignUpClick"
        android:layout_marginBottom="14dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:scaleType="centerInside"
        android:backgroundTint="@android:color/transparent"
        app:srcCompat="@drawable/ok"
        />
    <!-- app:srcCompat="@drawable/ok"-->

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editTextFname"
        android:hint="First Name"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/changeDP"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editTextUname"
        android:hint="Username"
        android:layout_below="@+id/editTextLName"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/editTextEmail"
        android:hint="E-mail"
        android:layout_below="@+id/editTextUname"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/editTextPass2"
        android:hint="Confirm Password"
        android:layout_below="@+id/editTextPassword1"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/editTextPass1"
        android:hint="Password"
        android:layout_below="@+id/editTextEmail"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:id="@+id/changeDP"
        android:clickable="true"
        android:scaleType="centerInside"
        android:backgroundTint="@android:color/transparent"
        android:layout_below="@+id/thrift"
        android:layout_alignParentStart="true"
        app:srcCompat="@drawable/userimg"
        />
    <!--app:srcCompat="@drawable/userimg"-->

</RelativeLayout>
