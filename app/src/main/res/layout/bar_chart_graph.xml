<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainBarLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".BarChartGraph">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BAR GRAPH"
        android:id="@+id/btnBarGraph"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forecast"
        android:id="@+id/btnForecastPage"
        android:layout_alignTop="@+id/btnBarGraph"
        android:layout_toEndOf="@+id/btnBarGraph" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PIE CHART"
        android:id="@+id/btnPieChart"
        android:layout_alignTop="@+id/btnForecastPage"
        android:layout_toEndOf="@+id/btnForecastPage" />
</RelativeLayout>
